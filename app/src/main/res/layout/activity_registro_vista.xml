<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistroVista"
    android:background="@color/fbutton_color_silver">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp">

            <TextView
                android:id="@+id/nameLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="casual"
                android:text="1.FINCA A"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Hora Inicio"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="Hora Fin"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temporizador"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
        <!-- Datos dinamicos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/horaInicioLocal"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="14:00"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/horaFinLocal"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="20:00"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/temporizador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="06:00"
                android:textSize="16sp" />

        </LinearLayout>
        <!-- Boton -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal">

            <info.hoang8f.widget.FButton
                android:id="@+id/btnBorrarLocal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:onClick="configurar"
                android:text="CONFIGURAR"
                android:textColor="@android:color/black"
                app:cornerRadius="4dp"
                app:fButtonColor="@color/fbutton_color_midnight_blue"
                app:shadowColor="@android:color/black"
                app:shadowEnabled="true"
                app:shadowHeight="5dp" />

        </LinearLayout>
        <!-- POTENCIA Y CONSUMO -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="casual"
                android:text="CONSUMO"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/barraConsumoLocal"
                android:layout_width="349dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:background="@android:color/holo_red_light"/>
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:background="@android:color/holo_red_light"/>
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:background="@android:color/holo_red_light"/>
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:background="@color/amarillo"/>
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="40"
                    android:background="@color/amarillo"/>
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:background="@color/amarillo"/>
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="60"
                    android:background="@color/amarillo"/>
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="70"
                    android:background="@color/amarillo"/>
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="80"
                    android:background="@color/registrarColor"/>
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="90"
                    android:background="@color/registrarColor"/>
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:background="@color/registrarColor"/>



            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="casual"
                android:text="POTENCIA"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/barraPotenciaLocal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:background="@android:color/holo_red_light"/>
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:background="@android:color/holo_red_light"/>
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="20"
                    android:background="@android:color/holo_red_light"/>
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="30"
                    android:background="@color/amarillo"/>
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="40"
                    android:background="@color/amarillo"/>
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:background="@color/amarillo"/>
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="60"
                    android:background="@color/amarillo"/>
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="70"
                    android:background="@color/amarillo"/>
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="80"
                    android:background="@color/registrarColor"/>
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="90"
                    android:background="@color/registrarColor"/>
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:background="@color/registrarColor"/>



            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>